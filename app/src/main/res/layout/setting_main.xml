<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/title"
    >
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/title_layout"
            layout="@layout/title_layout"
            />

    <FrameLayout
        android:id="@+id/feedback"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/feedback"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical|left"
            android:layout_width="16dp"
            android:layout_height="16dp" />
        <TextView
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:text="@string/Feedback"
            android:textSize="16sp"
            android:textColor="@color/nav_fontcolor"
            android:layout_width="wrap_content"
            android:layout_height="49dp" />
        <ImageView
            android:src="@drawable/nav_arrow"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical|right"
            android:layout_width="13dp"
            android:layout_height="13dp" />
        <View
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"

            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_account_number_line"
            />



    </FrameLayout>
    <FrameLayout
        android:id="@+id/version_upgrades"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/update_version"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical|left"
            android:layout_width="16dp"
            android:layout_height="16dp" />
        <TextView
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:text="@string/update_version"
            android:textSize="16sp"
            android:textColor="@color/nav_fontcolor"
            android:layout_width="wrap_content"
            android:layout_height="49dp" />
        <ImageView
            android:src="@drawable/nav_arrow"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical|right"
            android:layout_width="13dp"
            android:layout_height="13dp" />
        <View
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_account_number_line"
            />


    </FrameLayout>
        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <FrameLayout
            android:layout_marginBottom="80dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_gravity="center"
                android:background="@drawable/upload_goods_border"
                android:gravity="center"
                android:text="@string/login_out"
                android:textSize="16sp"
                android:textColor="@color/nav_fontcolor"
                android:layout_width="200dp"
                android:layout_height="49dp" />

        </FrameLayout>


    </LinearLayout>

</LinearLayout>