<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/title"
    >
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/title_layout"
            layout="@layout/title_layout"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_margin="20dp"
            android:background="@drawable/thrid_party_border">
            <EditText
                android:id="@+id/opinionCon"
                android:theme="@style/edittextstyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/feedback"
                android:textColor="@color/nav_fontcolor"
                android:textColorHighlight="#587fff"
                android:textColorHint="@color/q_gray"
                android:textSize="16sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/submit_recommendations"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:background="@drawable/login_btn"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="提交建议"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>