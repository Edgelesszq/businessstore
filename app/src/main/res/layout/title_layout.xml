<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionBarSize"
    android:background="@color/title"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/title"
        android:orientation="vertical">

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/title">

            <ImageView
                android:id="@+id/title_left_back_img"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title_center_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="12dp"
                android:text="@string/setting"
                android:textColor="@color/nav_fontcolor"
                android:textSize="18sp"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/title_right_search_img"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/search_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/title_right_message_img"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/message_icon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="10dp"
                android:text="@string/save"
                android:textColor="@color/nav_fontcolor"
                android:textSize="16sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/title_right_img"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="10dp"
                android:visibility="gone" />


            <com.miguelcatalan.materialsearchview.MaterialSearchView

                android:id="@+id/title_center_search_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <FrameLayout
                android:id="@+id/title_center_search_img"
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal|bottom|left"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/search_border"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/search_gray_icon" />
            </FrameLayout>


        </FrameLayout>


    </LinearLayout>
</LinearLayout>