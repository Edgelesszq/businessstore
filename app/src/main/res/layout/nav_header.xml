<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/slide_bac"
       >


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_alignParentLeft="true"
                android:id="@+id/image_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@drawable/qidong"
                android:layout_marginLeft="40px"

                />



            <TextView
                android:layout_marginLeft="40px"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_head"
                android:id="@+id/text_user_name"
                android:layout_width="wrap_content"
                android:layout_marginRight="140px"
                android:layout_height="25dp"
                android:gravity="center"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textColor="@color/white"
                android:textSize="20sp"
                />


            <ImageView
                android:layout_marginRight="40px"
                android:layout_alignParentRight="true"

                android:layout_centerVertical="true"
                android:id="@+id/qrcode"

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/swt_icon"
                />

    </RelativeLayout>
   <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:background="@color/white">
       <FrameLayout
           android:background="?android:attr/selectableItemBackground"           android:id="@+id/myaccount_icon"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <ImageView
               android:layout_marginLeft="40px"
               android:layout_gravity="center_vertical"
               android:src="@drawable/nav_personal_icon"
               android:layout_width="20dp"
               android:layout_height="20dp" />
           <TextView

               android:textSize="17sp"
               android:textColor="@color/nav_fontcolor"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="120px"
                android:text="我的账号"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/text_user_number"
               android:layout_marginRight="40dp"
               android:layout_gravity="center_vertical|right"
               android:text="135455sssssssssssssssssssss6455@qq.com"
               android:singleLine="true"
               android:maxEms="5"
               android:textSize="14sp"
               android:textColor="@color/q_gray"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />
           <ImageView
               android:src="@drawable/nav_arrow"
               android:layout_marginRight="20dp"
               android:layout_gravity="center_vertical|right"
               android:layout_width="13dp"
               android:layout_height="13dp" />


       </FrameLayout>
       <FrameLayout
           android:background="?android:attr/selectableItemBackground"

           android:id="@+id/third_party_domian"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <ImageView
               android:layout_marginLeft="40px"
               android:layout_gravity="center_vertical"
               android:src="@drawable/nav_fromthirdpart_icon"
               android:layout_width="20dp"
               android:layout_height="20dp" />
           <TextView
               android:textSize="17sp"
               android:textColor="@color/nav_fontcolor"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="120px"
               android:text="绑定域"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <ImageView
               android:src="@drawable/nav_arrow"
               android:layout_marginRight="20dp"
               android:layout_gravity="center_vertical|right"
               android:layout_width="13dp"
               android:layout_height="13dp" />



       </FrameLayout>
       <FrameLayout

           android:id="@+id/myorder_icon"
           android:background="?android:attr/selectableItemBackground"

           android:layout_width="match_parent"
           android:layout_height="50dp">
           <ImageView

               android:layout_marginLeft="40px"
               android:layout_gravity="center_vertical"
               android:src="@drawable/nav_myorders_icon"
               android:layout_width="20dp"
               android:layout_height="20dp" />
           <TextView
               android:textSize="17sp"
               android:textColor="@color/nav_fontcolor"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="120px"
               android:text="我的订单"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <ImageView
               android:src="@drawable/nav_arrow"
               android:layout_marginRight="20dp"
               android:layout_gravity="center_vertical|right"
               android:layout_width="13dp"
               android:layout_height="13dp" />


       </FrameLayout>
       <FrameLayout
           android:background="?android:attr/selectableItemBackground"

           android:id="@+id/store_address"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <ImageView
               android:layout_marginLeft="40px"
               android:layout_gravity="center_vertical"
               android:src="@drawable/nav_storelocation_icon"
               android:layout_width="20dp"
               android:layout_height="20dp" />
           <TextView
               android:textSize="17sp"
               android:textColor="@color/nav_fontcolor"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="120px"
               android:text="店的位置"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />


           <TextView
               android:id="@+id/text_user_address"
               android:layout_marginRight="40dp"
               android:layout_gravity="center_vertical|right"
               android:text="草市街，时代锦江"
               android:singleLine="true"
               android:maxEms="5"
               android:textSize="14sp"
               android:textColor="@color/q_gray"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />
           <ImageView
               android:src="@drawable/nav_arrow"
               android:layout_marginRight="20dp"
               android:layout_gravity="center_vertical|right"
               android:layout_width="13dp"
               android:layout_height="13dp" />

       </FrameLayout>
       <FrameLayout
            android:id="@+id/mystore"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <ImageView
               android:layout_marginLeft="40px"
               android:layout_gravity="center_vertical"
               android:src="@drawable/nav_mystore_icon"
               android:layout_width="20dp"
               android:layout_height="20dp" />
           <TextView
               android:textSize="17sp"
               android:textColor="@color/nav_fontcolor"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="120px"
               android:text="看我的店"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <ImageView
               android:src="@drawable/nav_arrow"
               android:layout_marginRight="20dp"
               android:layout_gravity="center_vertical|right"
               android:layout_width="13dp"
               android:layout_height="13dp" />


       </FrameLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           >
       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:background="@color/my_account_number_line"
           />
       <FrameLayout
           android:background="?android:attr/selectableItemBackground"
           android:id="@+id/setting_icon"
           android:layout_width="match_parent"
           android:layout_alignParentBottom="true"
           android:layout_height="50dp">
           <ImageView
               android:layout_marginLeft="40px"
               android:layout_gravity="center_vertical"
               android:src="@drawable/nav_setting_icon"
               android:layout_width="20dp"
               android:layout_height="20dp" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="120px"
               android:text="设置"
               android:textColor="@color/nav_fontcolor"
               android:textSize="17sp" />

       </FrameLayout>

    </LinearLayout>

</LinearLayout>