<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.businessstore.view.roundImageView.RoundImageView
            android:id="@+id/writer_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/default_head_image" />

        <TextView
            android:id="@+id/writer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="小白"
            android:textColor="@color/mgray"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/writer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="5dp"
        android:text="这个鞋子怎么卖啊？"
        android:textColor="@color/nav_fontcolor"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刚刚"
            android:textColor="@color/mgray"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/text_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="回复"
            android:textColor="@color/color5B92E1"
            android:textSize="11sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:background="@color/colorf5f8fa"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/linear_reply1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <com.businessstore.view.roundImageView.RoundImageView
                    android:id="@+id/reply_head1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/default_head_image" />

                <TextView
                    android:id="@+id/reply_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="卖家（店主）"
                    android:textColor="@color/mgray"
                    android:textSize="11sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/reply_content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:text="这双鞋200多。"
                android:textColor="@color/nav_fontcolor"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_reply2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <com.businessstore.view.roundImageView.RoundImageView
                    android:id="@+id/reply_head2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/default_head_image" />

                <TextView
                    android:id="@+id/reply_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="买家（小朋友）"
                    android:textColor="@color/mgray"
                    android:textSize="11sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/reply_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:text="你觉得质量怎么样？"
                android:textColor="@color/nav_fontcolor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/total_recovery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共10条回复 >"
                android:textColor="@color/color5B92E1"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/my_account_number_line" />


</LinearLayout>