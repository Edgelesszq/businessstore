<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    >
   <include layout="@layout/title_layout">

   </include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <TextView
            android:textColor="@color/nav_fontcolor"
            android:id="@+id/title_tips"
            android:textSize="25sp"
            android:text="请输入注册信息"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/register_email"
                android:theme="@style/edittextstyle"
                android:inputType="textEmailAddress"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="请输入邮箱"
                android:textSize="16sp"

                android:textColorHint="@color/q_gray"
                android:layout_marginLeft="50dp"
                android:layout_width="300dp"
                android:layout_height="49dp" />
            <View
                android:layout_gravity="bottom"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                />
        </FrameLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:theme="@style/edittextstyle"
                android:id="@+id/register_password"
                android:inputType="textPassword"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="请输入密码"
                android:textSize="16sp"
                android:textColorHint="@color/q_gray"

                android:layout_marginLeft="50dp"
                android:layout_width="230dp"
                android:layout_height="49dp" />
            <ToggleButton
                android:visibility="gone"
                android:id="@+id/togglePwd"
                android:layout_width="25dp"
                android:layout_height="19dp"
                android:layout_toRightOf="@+id/register_password"
                android:layout_centerVertical="true"
                android:background="@drawable/toggle_pwd_selector"
                android:textOff=""
                android:textOn="" />
            <View
                android:layout_alignParentBottom="true"
              android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                />

        </RelativeLayout>
        <FrameLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/register_country"
                android:theme="@style/edittextstyle"

                android:inputType="textEmailAddress"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="请输入国家"
                android:layout_marginLeft="50dp"
                android:layout_width="300dp"
                android:textSize="16sp"
                android:textColorHint="@color/q_gray"

                android:layout_height="49dp" />
            <View
                android:layout_gravity="bottom"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_marginTop="80px"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/register_one_ensure"
                android:text="下一步"
                android:gravity="center"

                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/login_btn"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

        </FrameLayout>


    </LinearLayout>
</LinearLayout>