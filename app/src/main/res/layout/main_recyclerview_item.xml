<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_recyclerview_item_bg"
        android:orientation="vertical">

        <com.businessstore.view.roundImageView.RoundImageView
            android:id="@+id/main_recyclerview_item_display_diagram"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="fitXY"
            android:src="@mipmap/main_yifu3"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:visibility="visible"

            >

            <TextView
                android:id="@+id/main_recyclerview_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="朵拉薇拉2018夏季新款"
                android:textColor="@color/nav_fontcolor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/main_recyclerview_item_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="大码女装重工打条刺绣斗篷显瘦连衣裙95720"
                android:textColor="@color/mgray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/main_recyclerview_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="$119"
                android:textColor="@color/red"
                android:textSize="14sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/main_recyclerview_item_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:text="剩余99件"
                    android:textColor="@color/mgray"

                    />

                <ImageView
                    android:id="@+id/main_recyclerview_item_more"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/main_recyclerview_item_more_icon"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>