<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/title"
    >
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/title_layout"
            layout="@layout/title_layout"
            />
    <!--<FrameLayout
        android:background="@drawable/login_logo"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <com.businessstore.view.customize.BackImageView
            android:layout_marginBottom="15dp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.businessstore.view.customize.BackImageView>
        <TextView
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_horizontal|bottom"
            android:text="@string/get_verification_code"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <TextView
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/forget_one_tips"
            android:text="验证码以发送到邮箱："
            android:textSize="16sp"
            android:textColor="@color/mgray"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"

            android:text="test@163.com"
            android:textSize="16sp"
            android:textColor="@color/mgray"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:theme="@style/edittextstyle"

                android:hint="请输入您的验证码"
                android:layout_gravity="top"
                android:paddingLeft="5dp"
                android:inputType="text"

                android:textSize="16sp"
                android:textColor="#c4c4c4"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@null" />
            <TextView
                android:textSize="16sp"
                android:textColor="@color/mgray"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="85dp"
                android:text="50s"
                android:layout_gravity="bottom|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/nav_color"
                android:text="重新获取"
                android:layout_gravity="bottom|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_gravity="bottom"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                />

        </FrameLayout>


    </FrameLayout>
    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="验证码输入错误"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <FrameLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/submit_btn"
            android:text="@string/submit"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/login_btn"
            android:layout_gravity="center"
            android:layout_width="310dp"
            android:layout_height="45dp" />

    </FrameLayout>
    </LinearLayout>
</LinearLayout>